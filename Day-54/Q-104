#include <stdio.h>
int main() {
    int n;
    printf("Enter a positive integer: ");
    scanf("%d", &n);
    int totalSum = n * (n + 1) / 2;
    int leftSum = 0;
    int pivot = -1;
    for (int x = 1; x <= n; x++) {
        leftSum += x; 
        int rightSum = totalSum - (x * (x - 1) / 2); 
        if (leftSum == rightSum) {
            pivot = x;
            break;
        }
    }
    printf("Pivot Integer: %d\n", pivot);
    return 0;
}
