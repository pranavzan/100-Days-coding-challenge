#include <stdio.h>
int main() {
    int m, n;  
    printf("Enter the number of rows: ");
    scanf("%d", &m);
    
    printf("Enter the number of columns: ");
    scanf("%d", &n);
    int matrix[m][n];
    printf("Enter the matrix elements:\n");
    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }
    int rowSums[m]; 
    for(int i = 0; i < m; i++) {
        rowSums[i] = 0;
        for(int j = 0; j < n; j++) {
            rowSums[i] += matrix[i][j];  
        }
    }

    printf("Row sums:\n");
    for(int i = 0; i < m; i++) {
        printf("Sum of row %d: %d\n", i + 1, rowSums[i]);
    }
    return 0;
}
