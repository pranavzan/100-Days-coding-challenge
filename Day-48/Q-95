#include <stdio.h>
#include <string.h>
int main() {
    char str1[1000]; 
    char str2[1000]; 
    char concatenated[2000];
    printf("Enter the first string: ");
    fgets(str1, sizeof(str1), stdin);
    size_t len1 = strlen(str1);
    if (len1 > 0 && str1[len1 - 1] == '\n') {
        str1[len1 - 1] = '\0';
        len1--; 
    }
    printf("Enter the second string: ");
    fgets(str2, sizeof(str2), stdin);
    size_t len2 = strlen(str2);
    if (len2 > 0 && str2[len2 - 1] == '\n') {
        str2[len2 - 1] = '\0';
        len2--;  
    }
    if (len1 != len2) {
        printf("No, the strings are not rotations of each other.\n");
        return 0;
    }
    if (len1 == 0) {
        printf("Yes, both strings are rotations of each other (empty strings).\n");
        return 0;
    }
    strcpy(concatenated, str1);
    strcat(concatenated, str1);
    if (strstr(concatenated, str2) != NULL) {
        printf("Yes, one string is a rotation of the other.\n");
    } else {
        printf("No, the strings are not rotations of each other.\n");
    }
    return 0;
}
