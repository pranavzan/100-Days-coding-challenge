#include <stdio.h>
#include <string.h>
int main() {
    char str[100];  
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    size_t len = strlen(str);
    if (len > 0 && str[len - 1] == '\n') {
        str[len - 1] = '\0'; 
        len--;  
    }
    if (len == 0) {
        printf("The string is empty, so there are no substrings.\n");
        return 0;
    }
    printf("All substrings:\n");
    for (int i = 0; i < len; i++) {  
        for (int j = i; j < len; j++) {  
            for (int k = i; k <= j; k++) { 
                printf("%c", str[k]);
            }
            printf("\n");  
        }
    }
    return 0;
}
