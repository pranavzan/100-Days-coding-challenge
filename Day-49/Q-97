#include <stdio.h>
#include <string.h>
#include <ctype.h>
int main() {
    char name[100]; 
    char output[100] = {0};  
    int first = 1;  
    printf("Enter a name: ");
    fgets(name, sizeof(name), stdin);
    int len = strlen(name);
    if (len > 0 && name[len-1] == '\n') {
        name[len-1] = '\0';
    }
    char *token = strtok(name, " ");
    while (token != NULL) {
        if (token[0] >= 'a' && token[0] <= 'z') { 
            char initial = toupper(token[0]);  
            if (first) {
                sprintf(output + strlen(output), "%c.", initial);  
                first = 0;
            } else {
                sprintf(output + strlen(output), " %c.", initial);  
            }
        } else if (token[0] >= 'A' && token[0] <= 'Z') { 
            if (first) {
                sprintf(output + strlen(output), "%c.", token[0]);
                first = 0;
            } else {
                sprintf(output + strlen(output), " %c.", token[0]);
            }
        }
        token = strtok(NULL, " ");
    }
    if (strlen(output) > 0) {
        printf("Initials: %s\n", output);
    } else {
        printf("No initials found.\n");
    }
    return 0;
}
