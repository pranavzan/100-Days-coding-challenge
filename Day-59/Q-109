#include <stdio.h>
#include <limits.h>
long long maxSubarraySum(int* arr, int n, int k) {
    if (n < k) {
        printf("Invalid: Array size must be at least k\n");
        return -1;
    }
    long long maxSum = 0;
    long long windowSum = 0;
    for (int i = 0; i < k; i++) {
        windowSum += arr[i];
    }
    maxSum = windowSum;
    for (int i = k; i < n; i++) {
        windowSum += arr[i] - arr[i - k];
        if (windowSum > maxSum) {
            maxSum = windowSum;
        }
    }
    return maxSum;
}
int main() {
    int arr[] = {1, 4, 2, 10, 2, 3, 1, 0, 20};
    int n = sizeof(arr) / sizeof(arr[0]);
    int k = 4;
    long long result = maxSubarraySum(arr, n, k);
    if (result != -1) {
        printf("Maximum sum of subarray of size %d: %lld\n", k, result);
    }
    return 0;
}
