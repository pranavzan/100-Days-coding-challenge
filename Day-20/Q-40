#include <stdio.h>
#include <string.h>
int main() {
    char binary[100];
    int valid = 1;
    printf("Enter a binary number: ");
    scanf("%s", binary);
    for (int i = 0; i < strlen(binary); i++) {
        if (binary[i] != '0' && binary[i] != '1') {
            valid = 0;
            break;
        }
    }
    if (!valid || strlen(binary) == 0) {
        printf("Invalid input. Please enter a valid binary number (consisting of 0s and 1s only).\n");
        return 1;
    }
    printf("1's complement of %s is: ", binary);
    for (int i = 0; i < strlen(binary); i++) {
        if (binary[i] == '0') {
            printf("1");
        } else {
            printf("0");
        }
    }
    printf("\n");
    return 0;
}
