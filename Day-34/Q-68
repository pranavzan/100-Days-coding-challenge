#include <stdio.h>
#include <stdlib.h>
int main() {
    int n, position, i;
    printf("Enter the size of the array: ");
    scanf("%d", &n);
    if (n < 0) {
        printf("Invalid array size.\n");
        return 1;
    }
    int *arr = (int*)malloc(n * sizeof(int));
    if (arr == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }
    if (n > 0) {
        printf("Enter the array elements: ");
        for (i = 0; i < n; i++) {
            scanf("%d", &arr[i]);
        }
    } else {
        printf("The array is empty, nothing to delete.\n");
        free(arr);
        return 0;
    }
    printf("Enter the position to delete from (0 to %d): ", n - 1);
    scanf("%d", &position);
    if (position < 0 || position >= n) {
        printf("Invalid position. It must be between 0 and %d.\n", n - 1);
        free(arr);
        return 1;
    }
    printf("Element at position %d is %d and will be deleted.\n", position, arr[position]);
    for (i = position; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }
    int *newArr = (int*)realloc(arr, (n - 1) * sizeof(int));
    if (newArr == NULL && n - 1 > 0) {  
        printf("Memory reallocation failed!\n");
        free(arr);  
        return 1;
    }
    arr = newArr;
    n--;  
    if (n > 0) {
        printf("Updated array after deletion: ");
        for (i = 0; i < n; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
    } else {
        printf("The array is now empty.\n");
    }
    free(arr);
    return 0;
}
